@model Domain.Service

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Service</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PartName" class="control-label"></label>
                <input asp-for="PartName" class="form-control" />
                <span asp-validation-for="PartName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartCost" class="control-label"></label>
                <input asp-for="PartCost" class="form-control" />
                <span asp-validation-for="PartCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LaborRate" class="control-label"></label>
                <input asp-for="LaborRate" class="form-control" />
                <span asp-validation-for="LaborRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsApproved" /> @Html.DisplayNameFor(model => model.IsApproved)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="QuoteNumber" class="control-label"></label>
                <select asp-for="QuoteNumber" class ="form-control" asp-items="ViewBag.QuoteNumber"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
