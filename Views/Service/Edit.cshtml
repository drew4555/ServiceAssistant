@model Domain.Service

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Quote</h2>

<h4>Service</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PartName" class="control-label" style="color:black; background-color:darkgray"></label>
                <input asp-for="PartName" readonly="readonly" class="form-control"  />
                <span asp-validation-for="PartName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartCost" class="control-label"style="color:black; background-color:darkgray"></label>
                <input asp-for="PartCost" readonly="readonly" class="form-control" />
                <span asp-validation-for="PartCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LaborRate" class="control-label"style="color:black; background-color:darkgray"></label>
                <input asp-for="LaborRate" readonly="readonly" class="form-control" />
                <span asp-validation-for="LaborRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsApproved"style="color:black; background-color:darkgray" /> @Html.DisplayNameFor(model => model.IsApproved)
                    </label>
                </div>
            </div>
            @Html.HiddenFor(model => model.QuoteNumber)
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

